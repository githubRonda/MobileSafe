<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lost_find"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        style="@style/TitleStyle"
        android:text="2. 手机卡绑定"
        />

    <TextView
        style="@style/ContentStyle"
        android:text="通过绑定SIM卡："
        />

    <TextView
        style="@style/ContentStyle"
        android:text="下次重启手机如果发现SIM卡变化就会发送报警短信"
        />

    <com.ronda.mobilesafe.view.SettingItemView
        android:id="@+id/siv_bind_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:desc_off="sim卡没有绑定"
        app:desc_on="sim卡已绑定"
        app:title="点击绑定SIM卡"
        >

    </com.ronda.mobilesafe.view.SettingItemView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/setup2"
            />

        <Button
            style="@style/NextBtnStyle"
            android:onClick="next"
            />

        <Button
            style="@style/PreviosBtnStyle"
            android:onClick="previous"
            />
    </RelativeLayout>


</LinearLayout>
